{
  "name": "nabu-gera-greiz.de",
  "private": true,
  "type": "module",
  "scripts": {
    "assets:clean": "shx rm -rf public/assets/{css,js}",
    "assets:hash": "node scripts/hashAssets.js",
    "build:css": "sass --style=compressed src/sass/main.sass public/assets/css/main.css",
    "build:js": "node scripts/incrementalEsbuild.js",
    "dev": "concurrently \"npm run sass:main -- --watch\" \"npm run esbuild\"",
    "build": "npm run assets:clean && npm run sass:main -- --no-source-map && npm run esbuild && npm run assets:hash",
    "test": "echo \"No test specified\""
  },
  "dependencies": {
    "animere": "^1.4.0",
    "bulma": "^0.9.2",
    "flickity": "^2.2.2"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "esbuild": "^0.8.53",
    "sass": "^1.32.8",
    "shx": "^0.3.3",
    "tiny-glob": "^0.2.8"
  }
}
