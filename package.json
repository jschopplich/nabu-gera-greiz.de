{
  "type": "module",
  "scripts": {
    "clean": "rimraf public/assets/{css,js} && rimraf storage/cache/*",
    "css:main": "sass src/sass/main.sass public/assets/css/main.css",
    "css:minify": "cleancss --output public/assets/css/main.css public/assets/css/main.css",
    "js:main": "rollup --config",
    "assets:hash": "node scripts/hashBuildAssets.js",
    "dev": "concurrently \"npm run css:main -- --embed-source-map --watch\" \"npm run js:main -- --watch\"",
    "build": "npm run clean && npm run css:main -- --no-source-map && npm run css:minify && npm run js:main && npm run assets:hash",
    "test": "echo \"No test specified\"",
    "lint": "eslint \"src/js/**/*.js\""
  },
  "dependencies": {
    "animere": "^1.4.0",
    "bulma": "^0.9.1",
    "flickity": "^2.2.1",
    "smooth-scroll": "^16.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "clean-css-cli": "^4.3.0",
    "concurrently": "^5.3.0",
    "core-js": "^3.6.5",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.6.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fast-glob": "^3.2.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.27.0",
    "terser": "^5.3.5"
  },
  "browserslist": [
    "last 2 Android versions",
    "last 2 Baidu versions",
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Edge versions",
    "last 2 Firefox versions",
    "last 2 FirefoxAndroid versions",
    "last 2 KaiOS versions",
    "last 2 Samsung versions",
    "last 2 UCAndroid versions"
  ]
}
