{
  "private": true,
  "version": "2.1.0",
  "homepage": "https://nabu-gera-greiz.de",
  "author": {
    "name": "Johann Schopplich",
    "email": "mail@jschopplich.com",
    "url": "https://jschopplich.com"
  },
  "scripts": {
    "build": "npm-run-all --parallel build-css build-js",
    "build-css": "npm-run-all --sequential css-compile css-minify",
    "build-js": "npm-run-all --sequential js-minify*",
    "css-compile": "sass --embed-sources src/sass/application.sass assets/dist/main.css",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output assets/dist/main.min.css assets/dist/main.css",
    "js-minify": "uglifyjs --compress typeofs=false --mangle --source-map \"url='main.min.js.map'\" --output assets/dist/main.min.js src/js/vendor/smooth-scroll.js src/js/vendor/bouncer.js src/js/application.js src/js/application.scrollreveal.js",
    "js-minify-prefetch": "uglifyjs --compress typeofs=false --mangle --source-map \"url='main.prefetch.min.js.map'\" --output assets/dist/main.prefetch.min.js src/js/vendor/medium-zoom.js src/js/vendor/flickity.pkgd.js src/js/application.prefetch.js",
    "js-minify-scrollreveal": "uglifyjs --compress typeofs=false --mangle --output assets/dist/scrollreveal.min.js src/js/vendor/scrollreveal.js",
    "js-minify-cookieconsent": "uglifyjs --compress typeofs=false --mangle --output assets/dist/main.cookieconsent.min.js src/js/vendor/cookieconsent.js src/js/cookieconsent.js",
    "deploy": "npm run build",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css": "nodemon --watch src/scss/ --ext sass --exec \"npm run build-css\"",
    "watch-js": "nodemon --watch src/js/ --ext js --exec \"npm run build-js\""
  },
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "sass": "^1.18.0",
    "uglify-js": "^3.5.4"
  }
}
