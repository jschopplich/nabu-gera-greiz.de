# editorconfig.org

root = true

[*.{css,scss,sass,js,json,ts,html,md,yml}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md,*.txt]
trim_trailing_whitespace = false

# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/

[*.php]
indent_size = 4

[site/templates/**.php]
indent_size = 2

[site/snippets/**.php]
indent_size = 2

[package.json,.{babelrc,editorconfig,eslintrc,lintstagedrc,stylelintrc}]
indent_style = space
indent_size = 2
